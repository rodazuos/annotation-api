{
  "name": "annotation-api",
  "version": "0.0.0",
  "description": "API for writing down reminders",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start-dev": "nodemon ./index.js",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest --coverage --passWithNoTests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --passWithNoTests"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": "git@github.com:rodazuos/movie-api.git",
  "author": "Rodrigo Souza <rodrigoteixeirasouza@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.1",
    "awilix": "^10.0.1",
    "dotenv": "^16.4.5",
    "http-status": "^1.7.4",
    "joi": "^17.12.2",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "mongoose": "^8.2.1"
  }
}
